#include <iostream> 
#include <stdlib.h> 
#include <conio.h> 
using namespace std;

class Complex{
	 double a, b;
public:
	 Complex Read();
	 Complex add(const Complex c1);
	 Complex sub(const Complex c2);
	 Complex multInt(const int n);
	 Complex divInt(const int n);
	Complex(double x = 0, double y = 0)
	{
		a = x;
		b = y;
	}
	void print(std::ostream & stream) const
	{
		if (b >= 0)
		stream <<  a << "+" << b << "i\n";
		else
			stream << a << b << "i\n";
	}
};
Complex Complex::add(const Complex c1)
{
	Complex r;
	r.a = a + c1.a;
	r.b = b + c1.b;
	return r;
}
Complex Complex::sub(const Complex c2)
{
	Complex l;
	l.a = a - c2.a;
	l.b = b - c2.b;
	return l;
}
Complex Complex::multInt(const int n)
{
	Complex q;
	q.a = a * n;
	q.b = b * n;
	return q;
}
Complex Complex::divInt(const int n)
{
	Complex t;
	t.a = a / n;
	t.b = b / n;
	return t;
}

