
#include <iostream> 
#include <stdlib.h> 
#include <conio.h> 
using namespace std;

struct complex { double a, b; };
class Complex{
	complex comp;
public:
	Complex(double x = 0, double y = 0)
	{
		comp.a = x;
		comp.b = y;
	}
	Complex Read();
	void const add(Complex c1)
	{
		comp.a = comp.a + c1.comp.a;
		comp.b = comp.b + c1.comp.b;
	}
	void const sub(Complex c2)
	{
		comp.a = comp.a - c2.comp.a;
		comp.b = comp.b - c2.comp.b;
	}
	void const multInt(int n)
	{
		comp.a = comp.a * n;
		comp.b = comp.b * n;
	}
	void const divInt(int n)
	{
		comp.a = comp.a / n;
		comp.b = comp.b / n;
	}
	void print()
	{
		if (comp.b >= 0)
			cout << comp.a << "+" << comp.b << "i\n";
		else
			cout << comp.a << comp.b << "i\n";
	}
};
Complex Complex::Read(){
	double x, y;
	cout << "Действительная часть\n";
	cin >> x;
	cout << "Мнимая часть\n";
	cin >> y;
	Complex A = Complex(x, y);
	return A;
}
int main()
{
	setlocale(LC_ALL, "Russian");
	cout << "Программа для работы с комплексными числами. Версия Alfa 1" << endl;
	cout << "Операции с комплексными числами\n";
	cout << "1 - Сложение\n";
	cout << "2 - Вычитание\n";
	cout << "3 - Умножение на 2 \n";
	cout << "4 - Деление на 5 \n";
	Complex a,b,c1,c2,с,g,y,o;
	cout << "Первое число \n";
	y = с = a = a.Read();
	cout << "Второе число \n";
	o = b = b.Read();
	cout << "Число 1: ";
	a.print();
	cout << "Число 2: ";
	b.print();
	a.add(b);
	cout << "Сумма 1 и 2 числа: ";
	a.print();
	с.sub(b);
	cout << "Вычитание из 1 числа 2: ";
	с.print();
	y.multInt(2);
	cout << "Умножение 1 числа на 2: ";
	y.print();
	o.divInt(5);
	cout << "Деление числа 2 на 5: ";
	o.print();
	system("pause");
	return 0;
}
